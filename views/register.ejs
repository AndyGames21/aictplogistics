<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Register | AICTP Logistics</title>
<link rel="stylesheet" href="/css/register.css" />
<!-- Register Form -->
  <div class="container">
    <h1>Create Your Account</h1>
    <form id="registerForm">
      <div class="input-group">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" placeholder="Enter your full name" required />
      </div>

      <div class="input-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required />
      </div>

      <div class="input-group">
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" pattern="[0-9]{10,15}" required />
      </div>

      <div class="input-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required minlength="6" />
      </div>

      <div class="input-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required minlength="6" />
      </div>

      <p id="error-message" class="error-message"></p>
      <button type="submit" id="registerBtn">Register</button>
    </form>

    <p class="footer-text">Already have an account? <a href="/login">Login here</a></p>
  </div>
<script src="/js/register.js" defer></script>